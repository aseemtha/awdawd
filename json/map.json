{ 
  
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Mortality rate for infants (per 1000)",
    "width": 500,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/Sancho17/FIT3179/main/json/countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "mortality_of_Country",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 50,
          "step": 5,
          "name": "Deaths "
        }  }
      ],
    "layer":[
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Sancho17/FIT3179/main/editedcsv.csv"
              },
              "key": "Country",
              "fields": ["mortality"]
            }
          },
          {"filter": "datum.mortality > mortality_of_Country"}
          
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "mortality",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [0, 15, 30],
              "range": ["#fff4e7", "#f6bb89", "#ec7a3c", "#e00000"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "mortality", "type": "quantitative"}
          ]
        }
      }
    ]
    
  }
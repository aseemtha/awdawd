{ 
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "width": 400, 
    "height": 300, 
    "title": "GDP vs life expectancy (GDP per capita)", 
    "data": { 
      "url": 
  "https://raw.githubusercontent.com/Sancho17/FIT3179/main/editedcsv.csv" 
    }, 
    "params": [ 
      { 
        "name": "GDP_Above", 
        "value": 0, 
        "bind": { 
          "input": "range", 
          "min": 0, 
        "max": 110000, 
        "step": 1000, 
        "name": "GDP: " 
      } 
    },
    
    { "name": "lifeexp_Above", 
    "value": 0, 
    "bind": { 
      "input": "range", 
      "min": 50, 
    "max": 100, 
    "step": 1, 
    "name": "Life expectancy: " 
      
      } 
    } , {"name": "continent_selection", 
    "bind": { 
      "input": "select", 
      "options": [ 
        null, 
        "North America", 
        "South America", 
        "Europe", 
        "Africa", 
        "Asia", 
        "Oceania" 
      ], 
      "labels":[ 
        "Show All", 
        "North America", 
        "South America", 
        "Europe", 
        "Africa", 
        "Asia", 
        "Oceania" 
      ], 
      "name": "Continent Selection: " }
    
  } 
  ], 
  "transform": [ 
    
    {"filter": "datum.GDP > GDP_Above"}, 
    {"filter": "continent_selection == null || datum.continent == continent_selection"},
    {"filter": "datum.lifeexp > lifeexp_Above"}
    
     
    ], 
    "encoding": { 
      "x": { 
        "field": "GDP", 
        "type": "quantitative", 
        "title": "GDP per capita (USD)", 
        "axis": {"tickCount": 5}, 
        "scale": {"type": "linear", "domain": [0, 100000]} 
      }, 
      "y": { 
        "field": "lifeexp", 
        "title": "Life expectancy (years)",
        "type": "quantitative", 
        "axis": {"tickCount": 6}, 
        "scale": {"type": "linear", "domain": [50, 100]} 
      } 
    }, 
    "layer": [ 
      { 
        "selection": { 
          "continent_highlight": { 
            "type": "multi", 
            
            "fields": ["Continent"], 
            "bind": "legend" 
          } 
        }, 
        "mark": "circle", 
        "encoding": { 
          "size": { 
            "field": "population", 
            "title":"Population",
            "type": "quantitative", 
            "scale": { 
              "type": "threshold", 
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000], 
              "range": [10, 50, 150, 200, 300, 400] 
            }, 
            "legend": {"format": ".1s"} 
          }, 
          "color": { 
            "field": "continent", 
            "title" : "Continent",
            "type": "nominal", 
            "scale": { 
              "domain": [ "North America", 
                "South America", 
                "Europe", 
                "Africa", 
                "Asia", 
                "Oceania" 
              ], 
              "range": [ 
                "#e41a1c", 
                "#984ea3", 
                "#ff7f00", 
                "#a6cee3", 
                "#377eb8", 
                "#a65628" 
              ] 
            } 
          }, 
          "opacity": { 
            "condition": {"selection": "continent_highlight", "value": 0.6}, 
            "value": 0.2 
          }, 
          "tooltip": [ 
            {"field": "Country", "type": "nominal"}, 
            {"field": "GDP", "type": "quantitative", "format": ","}
            

            
            
            
          ] 
        } 
      }, 
      { 
        "mark": { 
          "type": "text", 
          "align": "right", 
          "baseline": "middle", 
          "dx": -12, 
          "fontSize": 11.5,"fontStyle": "italic" 
        }, 
        "encoding": { 
          "text": {"field": "Country", "type": "nominal"}, 
          "color": {"value": "black"}, 
          "opacity": { 
            "condition": { 
              "test": "datum['Country'] == 'Central African Republic' ||  datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' ||  datum['Country'] == 'Qatar' ||  datum['Country'] == 'Switzerland'|| datum['Country'] == 'United States of America'" , 
              "value": 1 
            }, 
            "value": 0 
          }, 
          "tooltip": [ 
            {"field": "Country", "type": "nominal"}, 
            {"field": "GDP", "type": "quantitative", "format": ","},
            {"field": "population", "type": "quantitative", "format": ","},
            {"field": "lifeexp", "type": "quantitative","title" : "Life expectancy" ,"format": ","}
           
            
           
            
          ] 
        } 
      } 
    ] 
  }
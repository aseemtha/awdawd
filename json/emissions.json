{ 
  
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "CO2 Emissions per capita by country in 2020 (Tons)",
    "width": 500,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/Sancho17/FIT3179/main/json/countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "emissionsCapita_of_Country",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 16,
          "step": 1,
          "name": "Emissions per capita (Tons) "
        }  }
      ],
    "layer":[
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Sancho17/FIT3179/main/editedcsv.csv"
              },
              "key": "Country",
              "fields": ["emissionsCapita"]
            }
          },
          {"filter": "datum.emissionsCapita > emissionsCapita_of_Country"}
          
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "emissionsCapita",
            "title": "Quanitity",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [ 5, 10, 15],
              "range": ["#ffd8cb", "#f98664", "#ee5735", "#e00000"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "emissionsCapita", "type": "quantitative", "title": "Emissions per capita (Tons)"}
          ]
        }
      }
    ]
    
  }